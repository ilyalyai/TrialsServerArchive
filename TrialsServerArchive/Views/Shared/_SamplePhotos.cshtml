@model IEnumerable<TrialsServerArchive.Models.Objects.SamplePhoto>

@foreach (var photo in Model)
{
    <div class="col-md-3 mb-3">
        <div class="card">
            <img src="@Url.Action("GetPhoto", "Samples", new { id = photo.Id })"
                 class="card-img-top"
                 alt="Фото образца">
            <div class="card-footer p-1 text-center">
                <button class="btn btn-sm btn-danger delete-photo"
                        data-id="@photo.Id"
                        title="Удалить">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>
}